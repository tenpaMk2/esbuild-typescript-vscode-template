  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      // Enable if you don't use `watch` mode.
      // "preLaunchTask": "npm: build-debug",
      "program": "${workspaceFolder}/src/index.mts",
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "${workspaceFolder}/**/*.cjs",
        "${workspaceFolder}/**/*.mjs"
      ]
    }
  ]
}